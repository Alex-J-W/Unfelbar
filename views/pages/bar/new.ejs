<main>
    <div class="container">
        <form action="/bar/new" method="post">
            <input type="hidden" name="_csrf" value="<%= _csrf %>"/>
            <div>
                <div class="form-group">
                    <label for="name" class="col-form-label-lg">Name</label>
                    <input type="text" id="name" class="form-control" minlength="3" maxlength="80" name="name" required>
                </div>
                <div class="form-group">
                    <label for="owner" class="col-form-label-lg">Besitzer email</label>
                    <input type="email" id="owner" class="form-control" minlength="3" maxlength="80" name="owner" required>
                </div>
                <div class="form-group">
                    <label for="address" class="col-form-label-lg">Adresse</label>
                    <input type="text" id="address" class="form-control" minlength="3" maxlength="80" name="address" required>
                </div>
                <div class="form-group">
                    <label for="description" class="col-form-label-lg">Beschreibung</label>
                    <input type="text" id="description" maxlength="255" class="form-control" name="description" required>
                </div>
                <div class="form-group">
                    <label for="hours" class="col-form-label-lg">Öffnungszeiten</label>
                    <input type="text" id="hours" maxlength="255" class="form-control" name="openingHours" required>
                </div>
            </div>
            <button type="submit" class="unfelbar-button mt-4">Bild Hinzufügen</button>
        </form>
        <a class="unfelbar-button mt-4" href="/bar/<%= req.me.isOwnerOf%>/items">Zurück</a>
    </div>
</main>

<main>
    <div class="d-flex flex-column justify-content-center h-25">
        <h2 class="align-self-center">Kategorie bearbeiten</h2>
    </div>
    <div class="d-flex flex-column align-items-center p-2 h-100">
        <form action="/category/edit" method="post" class="p-5">
            <input type="hidden" name="_csrf" value="<%= _csrf %>"/>
            <input type="hidden" name="id" value="<%= cat.id%>">

            <div class="d-flex flex-column">
                <div class="form-group d-flex flex-column">
                    <label class="col-form-label-lg">Name</label>
                    <input type="text" class="unfelbar-input" minlength="0" maxlength="80" name="name"
                           placeholder="Kategorie name" pattern="[A-Za-z0-9äöüÄÖÜ\s]{1,20}" value="<%= cat.name%>" required>
                </div>
                <button type="submit" class="unfelbar-button align-self-center mt-3">Speichern</button>
            </div>
        </form>
        <button class="unfelbar-button align-self-center mt-3" onclick="window.location='/category/index'">Zurück</button>
    </div>
</main>

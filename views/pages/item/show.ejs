<main>
    <div class="container">
        <div class="w-100 mt-4">
            <div>
                <div class="row">
                    <div class="col-6">
                        Name
                    </div>
                    <div class="col-6">
                        <%= item.name ;%>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        Preis
                    </div>
                    <div class="col-6">
                        <%= item.price ;%>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        Beschreibung
                    </div>
                    <div class="col-6">
                        <%= item.description ;%>
                    </div>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-around mt-4">
        <button class="unfelbar-button" onclick="window.location='/item/showAll'">Zurück</button>
        <button class="unfelbar-button" onclick="window.location='/item/<%= item.id ;%>/edit'">Bearbeiten</button>
        <button class="unfelbar-button" onclick="window.location='/item/<%= item.id ;%>/destroy'">Löschen</button>
        </div>
    </div>
</main>

<main>
    <div class="container">
        <% if (item){%>
        <div class="w-100 mt-4">
            <div>
                <div class="row">
                    <div class="col-6">Name</div>
                    <div class="col-6"><%= item.name ;%></div>
                </div>
                <div class="row">
                    <div class="col-6">Preis</div>
                    <div class="col-6"><%= item.price ;%></div>
                </div>
                <div class="row">
                    <div class="col-6">Beschreibung</div>
                    <div class="col-6"><%= item.description ;%></div>
                </div>
                <div class="row">
                    <div class="col-6">Kategorie</div>
                    <div class="col-6"><%= item.category ;%></div>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-around mt-4">
        <button class="unfelbar-button" onclick="window.location='/item/index'">Zurück</button>
        <button class="unfelbar-button" onclick="window.location='/item/edit/<%= item.id ;%>'">Bearbeiten</button>
        <button class="unfelbar-button" onclick="window.location='/item/kill/<%= item.id ;%>'">Löschen</button>
        </div>
        <%} else { %>
            <h2>No item here</h2>
                <button class="unfelbar-button" onclick="window.location='/item/index'">Zurück</button>
            <%}%>
    </div>
</main>
